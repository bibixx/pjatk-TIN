<div class="table-wrapper">
  <table class="table">
    <thead>
      <tr class="table__header">
        <% if (!alternateColumns) { %>
        <th class="table__cell table__header-cell">Nazwa Wycieczki</th>
        <th class="table__cell table__header-cell">Imię</th>
        <th class="table__cell table__header-cell">Nazwisko</th>
        <th class="table__cell table__header-cell">Data Płatności</th>
        <% } else { %>
          <th class="table__cell table__header-cell">Nazwa Wycieczki</th>
          <th class="table__cell table__header-cell">Data Płatności</th>
          <th class="table__cell table__header-cell">Zniżka</th>
        <% } %>
        <th class="table__cell table__header-cell"></th>
      </tr>
    </thead>
    <tbody class="table__tbody">
      <% for (let i = 0; i < tripParticipants.length; i++) { %>
        <% const tripParticipant = tripParticipants[i] %>

        <tr class="table__row">
          <% if (!alternateColumns) { %>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= tripParticipant.trip.name %>
              </a>
            </td>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= tripParticipant.participant.name %>
              </a>
            </td>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= tripParticipant.participant.surname %>
              </a>
            </td>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= utils.formatDate(tripParticipant.dateofpayment) ?? 'Brak' %>
              </a>
            </td>
          <% } else { %>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= tripParticipant.trip.name %>
              </a>
            </td>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= utils.formatDate(tripParticipant.dateofpayment) ?? 'Brak' %>
              </a>
            </td>
            <td class="table__cell">
              <a href="/trip-payments/<%= tripParticipant.id %>/" class="table__cell-link">
                <%= tripParticipant.discount !== null ? `${tripParticipant.discount}%` : 'Brak' %>
              </a>
            </td>
          <% } %>
          <td class="table__cell table__cell--actions">
            <div class="table__actions-container">
              <a href="/trip-payments/<%= tripParticipant.id %>/update/" class="action-button">
                <span class="material-icons">edit</span>
              </a>
              <a href="/trip-payments/<%= tripParticipant.id %>/delete/" class="action-button action-button--danger">
                <span class="material-icons">delete</span>
              </a>
            </div>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
