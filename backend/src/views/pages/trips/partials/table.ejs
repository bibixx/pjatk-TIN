<div class="table-wrapper">
  <table class="table">
    <thead>
      <tr class="table__header">
        <th class="table__cell table__header-cell">Nazwa</th>
        <th class="table__cell table__header-cell">Cena</th>
        <th class="table__cell table__header-cell"></th>
      </tr>
    </thead>
    <tbody class="table__tbody">
      <% for (let i = 0; i < trips.length; i++) { %>
        <% const trip = trips[i] %>
        <tr class="table__row">
          <td class="table__cell">
            <a href="/trips/<%= trip.id %>/" class="table__cell-link">
              <%= trip.name %>
            </a>
          </td>
          <td class="table__cell">
            <a href="/trips/<%= trip.id %>/" class="table__cell-link">
              <%= utils.formatPrice(trip.price) %> PLN
            </a>
          </td>
          <td class="table__cell table__cell--actions">
            <div class="table__actions-container">
              <a href="/trips/<%= trip.id %>/update/" class="action-button">
                <span class="material-icons">edit</span>
              </a>
              <a href="/trips/<%= trip.id %>/delete/" class="action-button action-button--danger">
                <span class="material-icons">delete</span>
              </a>
            </div>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
