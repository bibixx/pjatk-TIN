<div class="table-wrapper">
  <table class="table">
    <thead>
      <tr class="table__header">
        <th class="table__cell table__header-cell">ImiÄ™</th>
        <th class="table__cell table__header-cell">Nazwisko</th>
        <th class="table__cell table__header-cell">Email</th>
        <th class="table__cell table__header-cell"></th>
      </tr>
    </thead>
    <tbody class="table__tbody">
      <% for (let i = 0; i < participants.length; i++) { %>
        <% const participant = participants[i] %>
        <tr class="table__row">
          <td class="table__cell">
            <a href="./<%= participant.id %>/" class="table__cell-link">
              <%= participant.name %>
            </a>
          </td>
          <td class="table__cell">
            <a href="./<%= participant.id %>/" class="table__cell-link">
              <%= participant.surname %>
            </a>
          </td>
          <td class="table__cell">
            <a href="./<%= participant.id %>/" class="table__cell-link">
              <%= participant.email %>
            </a>
          </td>
          <td class="table__cell table__cell--actions">
            <div class="table__actions-container">
              <a href="./<%= participant.id %>/update/" class="action-button">
                <span class="material-icons">edit</span>
              </a>
              <a href="./<%= participant.id %>/delete/" class="action-button action-button--danger">
                <span class="material-icons">delete</span>
              </a>
            </div>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
