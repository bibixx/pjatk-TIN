<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head.ejs', { isHome: false, page: 'Hotele' }); %>
<body>
  <div class="page-wrapper">
    <%- include('partials/page-header.ejs'); %>
    <div class="content-wrapper">
      <main class="content-card">
        <section>
          <header class="content-card__header-container">
            <h1 class="content-card__heading">Szczegóły Hotelu</h1>
          </header>
          <%-
            include('partials/form.ejs', {
              hotel,
              errors: undefined,
              form: {
                disabled: true
              }
            })
          %>
          <div class="form__buttons-container">
            <a href="./update/" class="button">
              Edytuj
              <span class="material-icons">edit</span>
            </a>
            <a href="../" class="button button--muted">Wróć</a>
          </div>
        </section>
        <section>
          <h3>Wycieczki</h3>
          <% if (trips.length === 0) { %>
            <p>Brak wycieczek</p>
          <% } else { %>
            <%- include('partials/trips-table.ejs', { trips }); %>
          <% } %>
        </section>
      </main>
    </div>
    <%- include('../../partials/footer.ejs'); %>
  </div>
</body>
</html>
